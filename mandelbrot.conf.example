[supervisor]
supervisor url = http://localhost:8080
ssl client certificate file = /etc/pki/tls/certs/mandelbrot-client.crt
ssl ca certificate file = /etc/pki/tls/certs/ca-bundle.crt 
use srv records = true

[agent]
state directory = state/
spool directory = spool/
run directory = run/

[client]


[system]
system type = io.mandelbrot.system.GenericHost
display name = My Host
description = "this is a generic host description"
tags = "server" "mandelbrot.io" "host" "generic"

[probes]
probe interval = 60 seconds
probe splay = 5 seconds
joining timeout = 5 minutes
probe timeout = 5 minutes
alert timeout = 10 minutes
leaving timeout = 12 hours
flap window = 10 minutes
flap deviations = 5
notification policy = emit

[probe:/load]
probe type = io.mandelbrot.probe.SystemLoad

[probe:/cpu]
probe type = io.mandelbrot.probe.SystemCPU

[probe:/memory]
probe type = io.mandelbrot.probe.SystemMemory

[probe:/disk]
probe type = io.mandelbrot.probe.SystemDiskUsage

[probe:/net]
probe type = io.mandelbrot.probe.SystemNetPerformance

#[endpoint:dummy]
#accepts = [ io.mandelbrot.* ]
#endpoint type = io.mandelbrot.endpoint.DummyEndpoint

[endpoint:http]
accepts = [ io.mandelbrot.* ]
endpoint type = io.mandelbrot.endpoint.HTTPEndpoint
endpoint url = http://localhost:8080

[maintenance]
default editor = vi
editor template = /etc/mandelbrot/maintenance.template

